<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_280sdp"
            android:layout_gravity="center"
            android:forceHasOverlappingRendering="true"
            app:autoFocusButtonColor="@color/teal_200"
            app:autoFocusButtonPaddingHorizontal="100dp"
            app:flashButtonColor="@color/teal_200"
            app:flashButtonPaddingHorizontal="100dp"
            app:frameColor="@color/teal_200"
            app:frameCornersSize="100dp" />

</FrameLayout>